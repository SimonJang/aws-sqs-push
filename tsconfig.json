{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"pretty": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noImplicitUseStrict": false,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"outDir": "lib",
		"strict": true
	},
	"exclude": [
		"node_modules",
		"source/test",
		"lib"
	]
}
